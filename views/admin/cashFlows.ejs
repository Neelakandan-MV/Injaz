<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cash Flow</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }


        .card {
            border-radius: 10px;
        }

        .main-content {
            padding: 20px;
        }

        /* Mobile Styles */
        @media (max-width: 768px) {
            .sidebar {
                position: fixed;
                width: 100%;
                height: auto;
                min-height: 0;
                z-index: 10;
                display: none;
            }

            .main-content {
                width: 100%;

            }

            .table-responsive {
                overflow-x: auto;
                /* Allow horizontal scrolling for tables */
            }
        }
    </style>
</head>

<body>
    <!-- Main Content -->
    <div class="main-content">

        <!-- Header -->
        <header>
            <div class="d-flex justify-content-between align-items-center">
                <h2>Cash Flow</h2>
                <a href="/admin/addTransactions" class="btn btn-primary">+ Add Cash Flow</a>
                <button type="button" class="btn btn-warning mt-3" onclick="downloadPdf()">Download Report</button>
            </div>

            <div>
                <p>
                    <%= currentCompany ? currentCompany.name : 'No company associated' %>
                </p>
                        <div class="company-dropdown">
                            <label for="companySwitch">Switch Company</label>
                            <select id="companySwitch" class="form-select"
                                onchange="location.href='/admin/switchCompany/' + this.value;">
                                <% companies.forEach(company=> { %>
                                    <option value="<%= company.id %>" <%=currentCompany[0].id===company.id ? 'selected'
                                        : '' %>>
                                        <%= company.name %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
            </div>
        </header>


        <!-- Cash Flow Section -->
        <section class="transactions mt-3 table-responsive" id="reportContainer">

            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Transaction ID</th>
                        <th>Name</th>
                        <th>Transaction Type</th>
                        <th>Money Type</th>
                        <th>Amount</th>
                        <!-- <th>Actions</th> -->
                    </tr>
                </thead>
                <tbody>
                    <% cashFlows.forEach(cashFlow=> { %>
                        <tr>
                            <td>
                                <%= new Date(cashFlow.date).toLocaleDateString() %>
                            </td>
                            <td>
                                <%= cashFlow.tnx_id %>
                            </td>
                            <td>
                                <%= cashFlow.name %>
                            </td>
                            <td>
                                <%= cashFlow.tnx_type %>
                            </td>
                            <td>
                                <%= cashFlow.money_type %>
                            </td>
                            <td>SAR <%= cashFlow.amount %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </section>

    </div>
    </div>
    
</body>
<script>
    function downloadPdf() {

        const wrapper = document.createElement('div');


        const companyName = document.createElement('h2');
        companyName.textContent = 'Injaz';
        companyName.style.textAlign = 'center'; // Optional styling
        wrapper.appendChild(companyName);


        const reportHeading = document.createElement('h4');
        reportHeading.textContent = 'Cash Flow Report';
        reportHeading.style.textAlign = 'center'; // Optional styling
        wrapper.appendChild(reportHeading);

        const tableContent = document.getElementById('reportContainer').cloneNode(true); // Clone the table element
        wrapper.appendChild(tableContent);

        html2pdf().from(wrapper).save();
    }
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>

</html>