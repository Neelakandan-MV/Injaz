<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Total Transactions</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <style>
     
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 95%;
        margin: 0 auto;
        padding: 10px;
    }

    h1 {
        color: #333;
        text-align: center;
        font-weight: 200;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    table th, table td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        font-size: 14px;
    }

    table th {
        background-color: #007bff;
        color: white;
    }

    table tr:hover {
        background-color: #f5f5f5;
    }

    /* Add scroll for table */
    .table-responsive {
        overflow-x: auto;
    }

    .pagination {
        text-align: center;
        margin-top: 20px;
    }

    .pagination a {
        margin: 0 5px;
        padding: 8px 16px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 14px;
    }

    .pagination a:hover {
        background-color: #0056b3;
    }

    .pagination .current-page {
        background-color: #28a745;
    }

    .hamburger {
        display: none;
        font-size: 24px;
        cursor: pointer;
        color: white;
        background: none;
        border: none;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
        

        .hamburger {
            display: block;
        }

        table {
            font-size: 12px;
        }

        button {
            padding: 8px 15px;
            font-size: 14px;
        }

        .table-responsive {
            margin-top: 10px;
        }
    }

</style>

<% 
    function formatDateToDDMMYYYY(mysqlDate) {
    const date = new Date(mysqlDate); // Parse the MySQL date
    const day = String(date.getDate()).padStart(2, '0'); // Ensure two digits
    const month = String(date.getMonth() + 1).padStart(2, '0'); // Months are 0-based
    const year = date.getFullYear();
    return `${day}-${month}-${year}`;
}
%>
</head>
<body>
    <%- include('./navbar')  %>

    <div class="container">
        <h2>Total Transactions</h2>
        <a href="/admin/dashboard"><button class="btn btn-success">Back</button></a>

        <div class="table-responsive">
        <table>
            <thead>
                <tr>
                    <th>Invoice Number</th>
                    <th>Customer Name</th>
                    <th>Total Amount</th>
                    <th>Paid / Received Amount</th>
                    <th>Balance Due</th>
                    <th>Payment Type</th>
                    <th>Transaction Type</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(function(transaction) { %>
                    <tr>
                        <td><%= transaction.invoice_number %></td>
                        <td><%= transaction.customer_name %></td>
                        <td><%= transaction.total_amount %></td>
                        <td><%= transaction.received_amount %></td>
                        <td><%= transaction.balance_due %></td>
                        <td><%= transaction.payment_type %></td>
                        <td><%= transaction.transaction_type %></td>
                        <td><%= formatDateToDDMMYYYY(transaction.date) %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

        <!-- Pagination -->
        <div class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <a href="/total-transactions?page=<%= i %>&limit=<%= limit %>" class="<%= i === currentPage ? 'current-page' : '' %>"><%= i %></a>
            <% } %>
        </div>
    </div>

</body>
</html>
<script>
    const hamburger = document.querySelector('.hamburger');
    const navMenu = document.querySelector('nav ul');

    hamburger.addEventListener('click', () => {
        navMenu.classList.toggle('show');
    });
</script>

