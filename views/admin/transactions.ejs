<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Total Transactions</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
     
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 95%;
        margin: 0 auto;
        padding: 10px;
    }

    h1 {
        color: #333;
        text-align: center;
        font-size: 24px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    table th, table td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        font-size: 14px;
    }

    table th {
        background-color: #007bff;
        color: white;
    }

    table tr:hover {
        background-color: #f5f5f5;
    }

    /* Add scroll for table */
    .table-responsive {
        overflow-x: auto;
    }

    .pagination {
        text-align: center;
        margin-top: 20px;
    }

    .pagination a {
        margin: 0 5px;
        padding: 8px 16px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 14px;
    }

    .pagination a:hover {
        background-color: #0056b3;
    }

    .pagination .current-page {
        background-color: #28a745;
    }

    /* Navbar */
    header {
        background-color: #3498db;
        color: #fff;
        padding: 15px 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 10px;
    }

    .navbar h1 {
        font-size: 20px;
        margin: 0;
        color: white;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }

    nav ul li {
        margin-left: 10px;
    }

    nav ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 14px;
        padding: 8px 12px;
        border-radius: 5px;
    }

    nav ul li a:hover {
        background-color: #2980b9;
    }

    .hamburger {
        display: none;
        font-size: 24px;
        cursor: pointer;
        color: white;
        background: none;
        border: none;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: flex-start;
        }

        nav ul {
            flex-direction: column;
            display: none;
            width: 100%;
            background-color: #3498db;
            padding: 10px 0;
            margin-top: 10px;
        }

        nav ul li {
            margin: 0;
            text-align: center;
        }

        nav ul li a {
            display: block;
            padding: 10px;
        }

        nav ul.show {
            display: flex;
        }

        .hamburger {
            display: block;
        }

        table {
            font-size: 12px;
        }

        h1 {
            font-size: 20px;
        }

        button {
            padding: 8px 15px;
            font-size: 14px;
        }

        .table-responsive {
            margin-top: 10px;
        }
    }
    button {
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    button:hover {
            background-color: #218838;
        }
</style>

    </style>
</head>
<body>
    <header>
        <div class="navbar">
            <h1>Admin Dashboard</h1>
            <button class="hamburger">&#9776;</button>
            <nav>
                <ul>
                    <li><a href="/admin/dashboard">Dashboard</a></li>
                    <li><a href="/admin/sales">Sales</a></li>
                    <li><a href="/admin/purchases">Purchases</a></li>
                    <li><a href="/admin/transactions">Transactions</a></li>
                    <li><a href="/admin/reports">Reports</a></li>
                    <li><a href="/admin/settings">Settings</a></li>
                    <li><a href="/admin/logout">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="container">
        <h1>Total Transactions</h1>
        <a href="/admin/dashboard"><button>Back</button></a>

        <div class="table-responsive">
        <table>
            <thead>
                <tr>
                    <th>Invoice Number</th>
                    <th>Customer Name</th>
                    <th>Total Amount</th>
                    <th>Paid Amount</th>
                    <th>Balance Due</th>
                    <th>Payment Type</th>
                    <th>Transaction Type</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(function(transaction) { %>
                    <tr>
                        <td><%= transaction.invoice_number %></td>
                        <td><%= transaction.customer_name %></td>
                        <td><%= transaction.total_amount %></td>
                        <td><%= transaction.paid_amount %></td>
                        <td><%= transaction.balance_due %></td>
                        <td><%= transaction.payment_type %></td>
                        <td><%= transaction.transaction_type %></td>
                        <td><%= transaction.date %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

        <!-- Pagination -->
        <div class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <a href="/total-transactions?page=<%= i %>&limit=<%= limit %>" class="<%= i === currentPage ? 'current-page' : '' %>"><%= i %></a>
            <% } %>
        </div>
    </div>

</body>
</html>
<script>
    const hamburger = document.querySelector('.hamburger');
    const navMenu = document.querySelector('nav ul');

    hamburger.addEventListener('click', () => {
        navMenu.classList.toggle('show');
    });
</script>

