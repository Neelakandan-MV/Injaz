<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adjust Cash</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include('./navbar') %>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white text-center">
                            <h3>Adjust Cash</h3>
                        </div>
                        <div class="card-body">
                            <form action="/admin/adjustCash" method="POST">
                                <!-- Category -->

                                <div class="mb-3 d-flex justify-content-center">
                                    <label>
                                        <input type="radio" name="adjustmentType" value="add" required> Add Cash
                                    </label><br>
                                    <label class="ms-4">
                                        <input type="radio" name="adjustmentType" value="reduce" required> Reduce Cash
                                    </label><br>
                                </div>
                                <!-- Date -->
                                <div class="mb-3">
                                    <label for="date" class="form-label">Date</label>
                                    <input type="date" name="date" id="date" class="form-control" required>
                                </div>
                                <!-- Amount -->
                                <div class="mb-3">
                                    <label for="amount" class="form-label">Amount</label>
                                    <input type="number" step="0.0001" name="amount" id="amount" class="form-control"
                                        placeholder="Enter Amount" required>
                                </div>
                                <!-- <div class="mb-3">
                                    <label for="amount" class="form-label">Description</label>
                                    <input type="text" name="description" id="description" class="form-control"
                                        placeholder="Enter Description (Optional)">
                                </div> -->
                                
                                <!-- Submit Button -->
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Add Expense</button>
                                    <a class="btn btn-danger mt-3" href="/admin/cashInHand">Back</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS Bundle -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            function setDefaultDate() {
                const dateInput = document.getElementById('date');
                const today = new Date();
                const formattedDate = today.toISOString().split('T')[0];
                dateInput.value = formattedDate;
            }


            window.onload = setDefaultDate;
        </script>
</body>

</html>