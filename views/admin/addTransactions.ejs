        .form-section h3 {
            margin-bottom: 20px;
            font-size: 24px;
        }
        
        .table input {
            width: 100%;
            border: none;
            outline: none;
            background: transparent;
        }
        
        .table input:focus {
            border-bottom: 1px solid #007bff;
        }
        .stockDisplay{
            font-size: small;
        }
        
        @media (max-width: 768px) {          
                    .table-responsive {
                        overflow-x: auto; /* Allow horizontal scrolling for tables */
                    }
        
            .form-section {
                padding: 15px;
            }
        
            .table th, .table td {
                padding: 8px;
            }
        
            .form-section h3 {
                font-size: 20px;
            }
        
