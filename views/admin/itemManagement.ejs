<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items Page</title>
    <!-- CSS Framework -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        /* Add custom styles here */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
        .card {
            border-radius: 10px;
        }
    

    .hamburger {
        display: none;
        font-size: 24px;
        cursor: pointer;
        color: white;
        background: none;
        border: none;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {

        .main-content {
            margin: 0px;
            width: 100%;
        }

        .hamburger {
            display: block;
        }

        table {
            font-size: 12px;
        }

        h1 {
            font-size: 20px;
        }

        button {
            padding: 8px 15px;
            font-size: 14px;
        }
        
        .table-responsive {
            margin-top: 10px;
        }
    }
    </style>
</head>
<body>
    <%- include('./navbar')  %>

    <div class="d-flex">
        
        <div class="main-content">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Items</h2>
                <a href="/admin/addItems"><button class="btn btn-primary">+ Add Item</button></a>
            </div>

            <div class="row">
                <!-- Item List -->
                <div class="col-12">
                    <div class="card p-3">
                        <h5 class="mb-3">Available Items</h5>
                        <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Item Code</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Sale Price</th>
                                    <th>Purchase Price</th>
                                    <th>Image</th>
                                    <th>Stock</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% items.forEach(item => { %>
                                <!-- Replace these rows with dynamic data -->
                                <tr>
                                    <td><%= item.item_code %></td>
                                    <td><%= item.item_name %></td>
                                    <td><%= item.categoryName ? item.categoryName : 'N/A' %></td>
                                    <td><%= item.sale_price %></td>
                                    <td><%= item.purchase_price %></td>
                                    <td><img src="/uploads/<%= item.image %>" class="img-sm img-thumbnail" alt=""></td>
                                    <td><%= item.stock %></td>
                                    <td>
                                        <a class="btn btn-sm btn-warning" href="/admin/editItems?item_id=<%= item.id %>"><i class="fas fa-edit"></i> Edit</a>
                                    </td>
                                </tr>
                                <% }); %>
                                
                                <!-- Add more rows as needed -->
                            </tbody>
                        </table>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>.img-sm {
        width: 70px;
        height: 50px;
    }
    </style>

    <!-- JS Framework -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        const hamburger = document.querySelector('.hamburger');
        const navMenu = document.querySelector('nav ul');
    
        hamburger.addEventListener('click', () => {
            navMenu.classList.toggle('show');
        });
    </script>
</body>
</html>
