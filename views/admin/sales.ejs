<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Details</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 90%;
            margin: 0 auto;
            padding: 20px;
        }
        h1 {
            color: #333;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        table th, table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        table th {
            background-color: #007bff;
            color: white;
        }
        table tr:hover {
            background-color: #f5f5f5;
        }
        .search-bar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .search-bar input {
            width: 60%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        .search-bar button {
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .search-bar button:hover {
            background-color: #218838;
        }
        .responsive-table {
            overflow-x: auto;
            margin-top: 20px;
        }
        @media (max-width: 768px) {
            table {
                font-size: 12px;
            }
            .search-bar {
                flex-direction: column;
                align-items: center;
            }
            .search-bar input, .search-bar button {
                width: 100%;
                margin-bottom: 10px;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Sales Transactions</h1>

        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search by customer name or invoice number...">
            <button onclick="searchSales()">Search</button>
        </div>

        <div class="responsive-table">
            <table>
                <thead>
                    <tr>
                        <th>Invoice Number</th>
                        <th>Customer Name</th>
                        <th>Total Amount</th>
                        <!-- <th>Received Amount</th> -->
                        <th>Balance Due</th>
                        <th>Payment Type</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% sales.forEach(function(sale) { %>
                        <tr>
                            <td><%= sale.invoice_number %></td>
                            <td><%= sale.customer_name %></td>
                            <td><%= sale.total_amount %></td>
                            <!-- <td><%= sale.received_amount %></td> -->
                            <td><%= sale.balance_due %></td>
                            <td><%= sale.payment_type %></td>
                            <td><%= sale.date %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function searchSales() {
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            const rows = document.querySelectorAll('table tbody tr');

            rows.forEach(row => {
                const invoiceNumber = row.cells[0].innerText.toLowerCase();
                const customerName = row.cells[1].innerText.toLowerCase();

                if (invoiceNumber.includes(searchInput) || customerName.includes(searchInput)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>

</body>
</html>
