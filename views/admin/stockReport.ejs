<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stock Report</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
           body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        padding: 0;
    }
    .table-responsive{
        margin: 20px;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
    }

    th, td {
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    header {
        background-color: #3498db;
        color: #fff;
        padding: 15px 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 10px;
    }

    .navbar h1 {
        font-size: 20px;
        margin: 0;
        color: white;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }

    nav ul li {
        margin-left: 10px;
    }

    nav ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 14px;
        padding: 8px 12px;
        border-radius: 5px;
    }

    nav ul li a:hover {
        background-color: #2980b9;
    }

    .hamburger {
        display: none;
        font-size: 24px;
        cursor: pointer;
        color: white;
        background: none;
        border: none;
    }
    .row a{
            text-decoration: none;
        }

    /* Responsive Styles */
    @media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: flex-start;
        }

        nav ul {
            flex-direction: column;
            display: none;
            width: 100%;
            background-color: #3498db;
            padding: 10px 0;
            margin-top: 10px;
        }

        nav ul li {
            margin: 0;
            text-align: center;
        }

        nav ul li a {
            display: block;
            padding: 10px;
        }

        nav ul.show {
            display: flex;
        }

        .hamburger {
            display: block;
        }

        table {
            font-size: 12px;
        }

        h1 {
            font-size: 20px;
        }

        button {
            padding: 8px 15px;
            font-size: 14px;
        }

        .table-responsive {
            margin-top: 10px;
            margin: 20px;
        }

    }
</style>

    </style>
</head>
<body>

    <%- include('./navbar')  %>

    <div class="container">
    <h1>Stock Details Report</h1>
    <button type="button" class="btn btn-warning mt-3 mb-3" onclick="downloadPdf()">Download Report</button>
    <div class="table-responsive">
        
    <table border="1" id="reportContainer">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Stock Quantity</th>
                <th>Unit</th>
                <th>Sale Price</th>
                <th>Quantity In</th>
                <th>Quantity Out</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item => { %>
                <tr>
                    <td><%= item.item_name %></td>
                    <td><%= item.stock %></td>
                    <td><%= item.unit %></td>
                    <td><%= item.sale_price %></td>
                    <td style="color: red;"><%= item.quantity_in %></td>
                    <td style="color:green"><%= item.quantity_out %></td>
                    <td class="d-flex"><a href="/admin/adjustStock?item_id=<%= item.id %>" class="btn btn-success btn-sm">Adjust Stock</a>
                    <a href="/admin/adjustStockDetails?item_id=<%= item.id %>" class="btn btn-success btn-sm ms-2">View</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script>
    const hamburger = document.querySelector('.hamburger');
    const navMenu = document.querySelector('nav ul');

    hamburger.addEventListener('click', () => {
        navMenu.classList.toggle('show');
    });
</script>
<script>
    function downloadPdf() {

        const wrapper = document.createElement('div');


        const companyName = document.createElement('h2');
        companyName.textContent = 'Injaz';
        companyName.style.textAlign = 'center'; // Optional styling
        wrapper.appendChild(companyName);


        const reportHeading = document.createElement('h4');
        reportHeading.textContent = 'Stock Detail Report';
        reportHeading.style.textAlign = 'center'; // Optional styling
        wrapper.appendChild(reportHeading);

        const tableContent = document.getElementById('reportContainer').cloneNode(true); // Clone the table element
        wrapper.appendChild(tableContent);

        html2pdf().from(wrapper).save();
    }
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>
</html>
