    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f8f9fa;

        }
        header {
        background-color: #3498db;
        color: #fff;
        padding: 15px 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 10px;
    }

    .navbar h1 {
        font-size: 20px;
        margin: 0;
        color: white;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }

    nav ul li {
        margin-left: 10px;
    }

    nav ul li a {
        color: #fff;
