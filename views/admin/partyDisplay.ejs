    /* Responsive Styles */
    @media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: flex-start;
        }

        nav ul {
            flex-direction: column;
            display: none;
            width: 100%;
            background-color: #3498db;
            padding: 10px 0;
            margin-top: 10px;
        }

        nav ul li {
            margin: 0;
            text-align: center;
        }

        nav ul li a {
            display: block;
            padding: 10px;
        }

        nav ul.show {
            display: flex;
        }

        .hamburger {
            display: block;
        }

        table {
            font-size: 12px;
        }

        h1 {
            font-size: 20px;
        }

        button {
            padding: 8px 15px;
            font-size: 14px;
        }

        .table-responsive {
            margin-top: 10px;
        }
    }


        .container {
            display: flex;
            flex: 1;
            padding: 20px;
            gap: 20px;
            justify-content: space-between;
            flex-wrap: wrap;
            
        }

        /* Left table */
        .left-table {
            flex: 1;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            min-width: 300px;
            height: 90vh;
        }

        .left-table h4 {
            margin-bottom: 20px;
            font-size: 1.2em;
            color: #495057;
        }

        .select {
            width: 100%;
            padding: 8px;
            margin-bottom: 20px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-size: 1em;
        }

        .left-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .left-table th,
        .left-table td {
            border: 1px solid #dee2e6;
            padding: 10px;
            text-align: left;
        }

        .left-table th {
            background-color: #f8f9fa;
            font-weight: bold;
            color: #212529;
        }

        /* Right section */
        .right-section {
            flex: 2;
            display: flex;
            flex-direction: column;
            gap: 20px;
            width: 100%;
        }

        .party-info-card {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .party-info-card h3 {
            margin: 0 0 15px;
            font-size: 1.5em;
            color: #495057;
        }

        .party-info-card p {
            margin: 8px 0;
            font-size: 1em;
            color: #6c757d;
        }

        .transaction-table {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 10px;
            overflow-y: scroll;
        }

        .transaction-table h4 {
            margin-bottom: 20px;
            font-size: 1.2em;
            color: #495057;
        }

        .transaction-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .transaction-table th,
        .transaction-table td {
            border: 1px solid #dee2e6;
            padding: 10px;
            text-align: left;
        }

        .transaction-table th {
            background-color: #f8f9fa;
            font-weight: bold;
            color: #212529;
        }

        .transaction-table td {
            color: #495057;
        }

        /* Responsive Design for Mobile Devices */
        @media screen and (max-width: 768px) {
            body {
                overflow: auto;
            }

            .container {
                flex-direction: column;
                gap: 10px;
                margin-left: 0px;
            }

            .left-table,
            .right-section {
                flex-basis: 100%;
            }

            .left-table table,
            .transaction-table table {
                font-size: 0.9em;
            }

            .party-info-card {
                padding: 15px;
            }
        }

        @media screen and (max-width: 480px) {

            .left-table,
            .right-section {
                padding: 15px;
            }

            .select {
                font-size: 0.9em;
                padding: 6px;
            }

            .left-table th,
            .left-table td,
            .transaction-table th,
            .transaction-table td {
                padding: 8px;
            }

            .transaction-table td {
                font-size: 0.9em;
            }

            .party-info-card p {
                font-size: 0.9em;
            }

            .party-info-card h3 {
                font-size: 1.3em;
            }
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .main-content {
            padding: 20px;
        }

        .card {
            border-radius: 10px;
        }

        .chart {
            height: 200px;
            background-color: #f1f1f1;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Mobile Styles */
        @media (max-width: 768px) {

            .main-content {
                margin-left: 0;
            }

        }
    </style>
</head>

<body>

    <datalist id="partiesList">
        <% parties.forEach(party=> {%>
            <option value="<%= party.name %>"></option>
                <% })%>
        </datalist>

    <%- include('./navbar')  %>

    <div class="container">
        <!-- Left table -->
        <div class="left-table">
            <h4>Party Overview</h4>
                <input
                    type="text" id="partySearchInput" placeholder="Search for a party..." class="form-control mb-3" oninput="selectParty(this.value)" list="partiesList"/>
            <table>
                <tr>
                    <th>Party Name</th>
                    <td id="partyName">Select a party</td>
                </tr>
                <tr>
                    <th>Total Amount</th>
                    <td id="totalAmount">$0</td>
                </tr>
            </table>
            <label for="partyStatus" class="mt-3">Party Status</label>
            <select class="select " id="partyStatus" onchange="updatePartyStatus(this.value)">
                <option value="1">Active</option>
                <option value="0">Hidden</option>
            </select>
            <button type="button" class="btn btn-danger" onclick="deleteParty()">Delete Party</button>
            <input type="hidden" id="partyId">

        </div>

        <!-- Right section -->
        <div class="right-section">
            <!-- Party info card -->
            <div class="party-info-card">
                <h3 id="partyInfoName">Party Information</h3>
                <div class="profile-pic-container">
                    <img id="partyDP" alt="Party Profile Pic" class="profile-pic" />
                </div>
                <p><strong>Phone:</strong> <span id="partyPhone">---</span></p>
                <p><strong>Email:</strong> <span id="partyEmail">---</span></p>
                <p><strong>Address:</strong> <span id="partyAddress">---</span></p>
                
            </div>
            <style>
                .profile-pic-container {
                    margin-right: 15px;
                    border: #212529 3px;
                }

                .profile-pic {
                    width: 70px;
                    height: 70px;
                    border-radius: 50%;
                    object-fit: cover;
                    border: 1px solid rgb(197, 197, 197);
                }

                .party-details {
                    flex-grow: 1;
                }
            </style>
            <!-- Transaction details table -->
            <div class="transaction-table">
                <h4>Transaction Details</h4>
                <table id="transactionDetailsTable">
                    <tr>
                        <th>Transaction Type</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Balance Due</th>
                    </tr>
                </table>
            </div>
            <button type="button" class="btn btn-success mt-4" data-bs-toggle="modal" data-bs-target="#addCompanyModal">
                Add New Party
            </button>
            <button type="button" class="btn btn-primary mt-2" onclick="importContacts()">Import Contacts</button>
            <button type="button" class="btn btn-secondary mt-2" onclick="editParty()">Edit Party</button>
        </div>
    </div>
    </div>
    <!-- Modal for Add New Company -->
    <div class="modal fade" id="addCompanyModal" tabindex="-1" aria-labelledby="addCompanyModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCompanyModalLabel">Add New Party</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/admin/addParty" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="companyName" class="form-label">Party Name</label>
                            <input type="text" class="form-control" id="companyName" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="text" class="form-control" id="companyName" name="phone" required>
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="companyName" name="address" >
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Party Email</label>
                            <input type="email" class="form-control" id="companyName" name="email">
                        </div>
                        <div class="mb-3">
                            <label for="dp" class="form-label">Profile Picture</label>
                            <input type="file" class="form-control" id="profile" name="image">
                        </div>

                        <button type="submit" class="btn btn-success">Save Party</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
       const parties = <%- JSON.stringify(parties) %>;


function selectParty(partyName) {
    const party = parties.find((p) => p.name == partyName);
    if (party) {
        // Update the party overview
        document.getElementById("partyId").value = party.id;
        document.getElementById("partyStatus").value = party.partyStatus;
        document.getElementById("partyName").textContent = party.name;
        document.getElementById("totalAmount").textContent = party.amount;

        // Update the party info card
        document.getElementById("partyInfoName").textContent = party.name;
        document.getElementById("partyPhone").textContent = party.phone;
        document.getElementById("partyEmail").textContent = party.email;
        document.getElementById("partyAddress").textContent = party.address;
        document.getElementById("partyDP").src = `/uploads/${
            party.profile_picture || "image-1737386570443-200304972"
        }`;

        // Update transaction details table
        const transactionTable = document.getElementById(
            "transactionDetailsTable"
        );
        const rows = transactionTable.getElementsByTagName("tr");
        for (let i = rows.length - 1; i > 0; i--) {
            transactionTable.deleteRow(i);
        }
        party.transactions.forEach((transaction) => {
            const row = transactionTable.insertRow();
            row.insertCell(0).textContent = transaction.transaction_type;
            row.insertCell(1).textContent = new Date(
                transaction.date
            ).toLocaleDateString();
            row.insertCell(2).textContent = transaction.amount;
            row.insertCell(3).textContent = transaction.balance_due;
        });
    }
}


// if (parties.length > 0) {
