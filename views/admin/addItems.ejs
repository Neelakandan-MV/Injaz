<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Item</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>

        .form-container {
            max-width: 900px;
            margin: 2rem auto;
            background: #ffffff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-title {
            text-align: center;
            margin-bottom: 1.5rem;
            font-weight: bold;
            color: #333;
        }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        padding: 0;
    }
    
    header {
        background-color: #3498db;
        color: #fff;
        padding: 20px 0;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .navbar {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
    }
    
    .navbar h1 {
        font-size: 24px;
        margin: 0;
    }
    
    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }
    
    nav ul li {
        margin-left: 20px;
    }
    
    nav ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 16px;
        padding: 10px 15px;
        border-radius: 5px;
    }
    
    nav ul li a:hover {
        background-color: #2980b9;
    }
    
    main {
        padding: 40px 20px;
    }
    
    h2 {
        font-size: 24px;
        color: #333;
    }
    
    section {
        margin-bottom: 30px;
    }
    
    .stat-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }
    
    .stat-card {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    
    .stat-card h3 {
        margin: 0;
        color: #3498db;
    }
    
    .stat-card p {
        font-size: 20px;
        color: #333;
    }
    
    .quick-links ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .quick-links ul li {
        margin: 10px 0;
    }
    
    .quick-links ul li a {
        color: #3498db;
        text-decoration: none;
        font-size: 18px;
    }
    
    .quick-links ul li a:hover {
        text-decoration: underline;
    }
    
    .report-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }
    
    .report-card {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    
    .report-card a {
        display: block;
        margin-top: 10px;
        color: #3498db;
        text-decoration: none;
        font-size: 16px;
    }
    
    .report-card a:hover {
        text-decoration: underline;
    }
    
    .user-management p {
        font-size: 18px;
        margin-top: 10px;
    }
    
    footer {
        background-color: #2c3e50;
        color: #fff;
        text-align: center;
        padding: 20px;
        position: fixed;
        width: 100%;
        bottom: 0;
    }
    
    /* Responsive Styles */
    header {
        background-color: #3498db;
        color: #fff;
        padding: 15px 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 10px;
    }

    .navbar h1 {
        font-size: 20px;
        margin: 0;
        color: white;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }

    nav ul li {
        margin-left: 10px;
    }

    nav ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 14px;
        padding: 8px 12px;
        border-radius: 5px;
    }

    nav ul li a:hover {
        background-color: #2980b9;
    }

    .hamburger {
        display: none;
        font-size: 24px;
        cursor: pointer;
        color: white;
        background: none;
        border: none;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: flex-start;
        }

        nav ul {
            flex-direction: column;
            display: none;
            width: 100%;
            background-color: #3498db;
            padding: 10px 0;
            margin-top: 10px;
        }

        nav ul li {
            margin: 0;
            text-align: center;
        }

        nav ul li a {
            display: block;
            padding: 10px;
        }

        nav ul.show {
            display: flex;
        }

        .hamburger {
            display: block;
        }

        table {
            font-size: 12px;
        }

        h1 {
            font-size: 20px;
        }

        button {
            padding: 8px 15px;
            font-size: 14px;
        }

        .table-responsive {
            margin-top: 10px;
        }
    }
    </style>
</head>

<body>
    <header>
        <div class="navbar">
            <h1>Admin Dashboard</h1>
            <button class="hamburger">&#9776;</button>
            <nav>
                <ul>
                    <li><a href="/admin/dashboard">Dashboard</a></li>
                    <li><a href="/admin/sales">Sales</a></li>
                    <li><a href="/admin/purchases">Purchases</a></li>
                    <li><a href="/admin/transactions">Transactions</a></li>
                    <li><a href="/admin/reports">Reports</a></li>
                    <li><a href="/admin/settings">Settings</a></li>
                    <li><a href="/admin/logout">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="main-content">
        <section class="form-section mt-4">
            <div class="form-container">
                <h2 class="form-title">Add Item</h2>
                <form id="itemForm" action="/admin/addItems" method="post" enctype="multipart/form-data">
                    <!-- Row 1: Item Name and HSN -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="itemName" class="form-label">Item Name *</label>
                            <input type="text" class="form-control" id="itemName" name="itemName"
                                placeholder="Enter item name" required>
                        </div>
                        <div class="col-md-6">
                            <label for="itemHsn" class="form-label">Item HSN *</label>
                            <input type="text" class="form-control" id="itemHsn" name="itemHSN"
                                placeholder="Enter HSN code" required>
                        </div>
                    </div>

                    <!-- Row 2: Category and Item Code -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="category" class="form-label">Category</label>
                            <select class="form-select" id="category" name="category" required>
                                <option value="">Select Category</option>
                                <% if(categories.length){ categories.map((category)=>{ %>
                                    <option value="<%= category.id %>">
                                        <%= category.category %>
                                    </option>
                                    <% })} %>
                                        <option value="+ Add New Category">+ Add New Category</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="itemCode" class="form-label">Item Code</label>
                            <div class="d-flex align-items-center">
                                <input type="text" class="form-control me-2" id="itemCode" name="itemCode"
                                    placeholder="Enter item code">
                                <button type="button" id="generateCodeButton" class="btn btn-primary btn-sm">Generate
                                    Code</button>
                            </div>
                        </div>
                    </div>

                    <!-- Row 3: Select Unit -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="unit" class="form-label">Unit</label>
                            <select class="form-select" id="unit" name="unit" required>
                                <option value="">Select Unit</option>
                                <option value="kg">Kilogram</option>
                                <option value="pcs">Pieces</option>
                                <option value="packs">Packs</option>
                                <option value="ltr">Liters</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="itemImage" class="form-label">Add Item Image</label>
                            <input type="file" class="form-control" id="itemImage" name="image" multiple>
                        </div>
                    </div>

                    <!-- Sale Price Section -->
                    <h5 class="mt-4">Sale Price</h5>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="salePrice" class="form-label">Sale Price *</label>
                            <input type="text" class="form-control" id="salePrice" name="salePrice"
                                placeholder="Enter sale price" required>
                        </div>
                        <div class="col-md-4">
                            <label for="salePriceTax" class="form-label">Tax</label>
                            <select class="form-select" id="salePriceTax" name="salePriceTaxIncluded">
                                <option value="false">Without Tax</option>
                                <option value="true">With Tax</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="discount" class="form-label">Discount (%)</label>
                            <input type="text" class="form-control" id="discount" name="discountValue"
                                placeholder="Enter discount">
                        </div>
                    </div>

                    <!-- Wholesale Price Section -->
                    <h5 class="mt-4">Wholesale Price</h5>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="wholesalePrice" class="form-label">Wholesale Price</label>
                            <input type="text" class="form-control" id="wholesalePrice" name="wholesalePrice"
                                placeholder="Enter wholesale price">
                        </div>
                    </div>

                    <!-- Purchase Price Section -->
                    <h5 class="mt-4">Purchase Price</h5>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="purchasePrice" class="form-label">Purchase Price *</label>
                            <input type="text" class="form-control" id="purchasePrice" name="purchasePrice"
                                placeholder="Enter purchase price" required>
                        </div>
                        <div class="col-md-6">
                            <label for="purchaseTax" class="form-label">Tax</label>
                            <select class="form-select" id="purchaseTax" name="purchasePriceTaxIncluded">
                                <option value="false">Without Tax</option>
                                <option value="true">With Tax</option>
                            </select>
                        </div>
                    </div>

                    <!-- Tax Rate Section -->
                    <h5 class="mt-4">Tax Rate</h5>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="taxRate" class="form-label">Tax Rate *</label>
                            <input type="text" class="form-control" id="taxRate" name="taxRate"
                                placeholder="Enter tax rate" required>
                        </div>
                    </div>

                    <!-- Save Button -->
                    <button type="submit" class="btn btn-primary w-100">Save</button>
                </form>
            </div>
        </section>
    </div>

        <!-- Add New Category Modal -->
        <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addCategoryModalLabel">Add New Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/admin/addCategory" method="post">
                        <div class="modal-body">
                            <input type="text" class="form-control" id="newCategory" name="category"
                                placeholder="Enter new category name">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary" id="saveCategory">Save Category</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

        <!-- JavaScript to trigger the modal -->
        <script>
            document.querySelector('#category').addEventListener('change', function () {
                if (this.value === '+ Add New Category') {
                    var myModal = new bootstrap.Modal(document.getElementById('addCategoryModal'));
                    myModal.show();
                }
            });

            document.querySelector('#saveCategory').addEventListener('click', function () {
                var newCategory = document.querySelector('#newCategory').value;
                if (newCategory) {
                    var categorySelect = document.querySelector('#category');
                    var newOption = document.createElement('option');
                    newOption.value = newCategory;
                    newOption.textContent = newCategory;
                    categorySelect.appendChild(newOption);
                    categorySelect.value = newCategory;
                    var myModal = bootstrap.Modal.getInstance(document.getElementById('addCategoryModal'));
                    myModal.hide();
                }
            });
        </script>
        <script>
            const hamburger = document.querySelector('.hamburger');
            const navMenu = document.querySelector('nav ul');
        
            hamburger.addEventListener('click', () => {
                navMenu.classList.toggle('show');
            });
        </script>

        <!-- Generate Item Code Button -->
        <script>
            document.getElementById("generateCodeButton").addEventListener("click", function () {
                const prefix = "ITEM";
                const randomNumber = Math.floor(1000 + Math.random() * 9000);
                const timestamp = Date.now().toString().slice(-4);
                const generatedCode = `${prefix}-${randomNumber}-${timestamp}`;
                document.getElementById("itemCode").value = generatedCode;
            });
        </script>
</body>

</html>