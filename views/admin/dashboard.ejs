<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
</head>
<body>
    <header>
        <div class="navbar">
            <h1>Admin Dashboard</h1>
            <nav>
                <ul>
                    <li><a href="/admin/dashboard">Dashboard</a></li>
                    <li><a href="/admin/sales">Sales</a></li>
                    <li><a href="/admin/purchases">Purchases</a></li>
                    <li><a href="/admin/transactions">Transactions</a></li>
                    <li><a href="/admin/reports">Reports</a></li>
                    <li><a href="/admin/settings">Settings</a></li>
                    <li><a href="/admin/logout">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main>
        <section class="overview">
            <h2>Business Overview</h2>
            <div class="stat-cards">
                <div class="stat-card">
                    <h3>Total Sales</h3>
                    <p>₹<%= total_sale[0].total_sales %></p>
                </div>

                <div class="stat-card">
                    <h3>Total Purchases</h3>
                    <p>₹<%= total_purchase[0].total_purchase %></p>
                </div>
                <div class="stat-card">
                    <h3>Total Profit</h3>
                    <p>₹<%= total_profit[0].total_profit %></p>
                </div>
                <div class="stat-card">
                    <h3>Outstanding Payments</h3>
                    <p>₹<%= outstanding_payments[0].outstanding_payments %></p>
                </div>
            </div>
        </section>

        <section class="quick-links">
            <h2>Quick Links</h2>
            <ul>
                <li class="nav-item">
                    <a onclick="companyDisplay()" href="#" class="nav-link"><i class="fa-solid fa-building"></i> Company</a>
        
                    <div class="row companyClass">
                        <div class="col-md-12">
                            <div class="">
                                <!-- <h5>Current Company</h5> -->
                                <p><%= currentCompany ? currentCompany.name : 'No company associated' %></p>
        
                                <% if (!currentCompany) { %>
                                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCompanyModal">
                                        Add New Company
                                    </button>
                                <% } else { %>
                                    <div class="company-dropdown">
                                        <label for="companySwitch">Switch Company</label>
                                        <select id="companySwitch" class="form-select" onchange="location.href='/admin/switchCompany/' + this.value;">
                                            <% companies.forEach(company => { %>
                                                <option value="<%= company.id %>" <%= currentCompany[0].id === company.id ? 'selected' : '' %>>
                                                    <%= company.name %>
                                                </option>
                                            <% }); %>
                                        </select>
                                    </div>
                                    <button type="button" class="btn btn-success mt-4" data-bs-toggle="modal" data-bs-target="#addCompanyModal">
                                        Add New Company
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </li>
                <li><a href="/admin/sales">Manage Sales</a></li>
                <li><a href="/admin/purchases">Manage Purchases</a></li>
                <li><a href="/admin/transactions">Manage Expenses</a></li>
                <li><a href="/admin/reports">View Reports</a></li>
                <li><a href="/admin/viewItems">Item Management</a></li>
                <li><a href="/admin/addTransactions">Add Sale/Purchase</a></li>
            </ul>
        </section>

        <section class="latest-reports">
            <h2>Latest Reports</h2>
            <div class="report-cards">
                <div class="report-card">
                    <h3>Profit & Loss Report</h3>
                    <a href="/admin/reports/profit-loss">View</a>
                </div>
                <div class="report-card">
                    <h3>Cash Flow Report</h3>
                    <a href="/admin/reports/cash-flow">View</a>
                </div>
                <div class="report-card">
                    <h3>Stock Summary</h3>
                    <a href="/admin/reports/stock-summary">View</a>
                </div>
            </div>
        </section>

        <section class="user-management">
            <h2>User Management</h2>
            <p><a href="/admin/userManagement">Manage Users</a></p>
        </section>
    </main>

    <!-- <footer>
        <p>&copy; 2025 Injaz. All rights reserved.</p>
    </footer> -->
    <div class="modal fade" id="addCompanyModal" tabindex="-1" aria-labelledby="addCompanyModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCompanyModalLabel">Add New Company</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/admin/addCompany" method="POST">
                        <div class="mb-3">
                            <label for="companyName" class="form-label">Company Name</label>
                            <input type="text" class="form-control" id="companyName" name="name" required>
                        </div>
                        <button type="submit" class="btn btn-success">Save Company</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        padding: 0;
    }
    
    header {
        background-color: #3498db;
        color: #fff;
        padding: 20px 0;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .navbar {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
    }
    
    .navbar h1 {
        font-size: 24px;
        margin: 0;
    }
    
    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }
    
    nav ul li {
        margin-left: 20px;
    }
    
    nav ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 16px;
        padding: 10px 15px;
        border-radius: 5px;
    }
    
    nav ul li a:hover {
        background-color: #2980b9;
    }
    
    main {
        padding: 40px 20px;
    }
    
    h2 {
        font-size: 24px;
        color: #333;
    }
    
    section {
        margin-bottom: 30px;
    }
    
    .stat-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }
    
    .stat-card {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    
    .stat-card h3 {
        margin: 0;
        color: #3498db;
    }
    
    .stat-card p {
        font-size: 20px;
        color: #333;
    }
    
    .quick-links ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .quick-links ul li {
        margin: 10px 0;
    }
    
    .quick-links ul li a {
        color: #3498db;
        text-decoration: none;
        font-size: 18px;
    }
    
    .quick-links ul li a:hover {
        text-decoration: underline;
    }
    
    .report-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }
    
    .report-card {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    
    .report-card a {
        display: block;
        margin-top: 10px;
        color: #3498db;
        text-decoration: none;
        font-size: 16px;
    }
    
    .report-card a:hover {
        text-decoration: underline;
    }
    
    .user-management p {
        font-size: 18px;
        margin-top: 10px;
    }
    
    footer {
        background-color: #2c3e50;
        color: #fff;
        text-align: center;
        padding: 20px;
        position: fixed;
        width: 100%;
        bottom: 0;
    }
    
    /* Responsive Styles */
    @media screen and (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: flex-start;
        }
    
        .navbar h1 {
            margin-bottom: 10px;
        }
    
        .nav ul {
            flex-direction: column;
            align-items: flex-start;
        }
    
        .nav ul li {
            margin-bottom: 10px;
        }
    
        .stat-cards {
            grid-template-columns: 1fr;
        }
    
        .quick-links ul {
            padding-left: 20px;
        }
    
        .report-cards {
            grid-template-columns: 1fr;
        }
    }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>