<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase Details</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 90%;
            margin: 0 auto;
            padding: 20px;
        }
        h1 {
            color: #333;
            text-align: center;
            font-weight: 200;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        table th, table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        table th {
            background-color: #007bff;
            color: white;
        }
        table tr:hover {
            background-color: #f5f5f5;
        }
        .search-bar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .search-bar input {
            width: 60%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        .search-bar button {
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .search-bar button:hover {
            background-color: #218838;
        }
        .responsive-table {
            overflow-x: auto;
            margin-top: 20px;
        }
        @media (max-width: 768px) {
            table {
                font-size: 12px;
            }
            .search-bar {
                flex-direction: column;
                align-items: center;
            }
            .search-bar input, .search-bar button {
                width: 100%;
                margin-bottom: 10px;
            }
            button {
            padding: 8px 15px;
            font-size: 14px;
        }
        .table-responsive{
            overflow: scroll;
        }
        }
    </style>
</head>
<body>
    <%- include('./navbar')  %>

    <div class="container">
        <h2>Purchase Transactions</h2>

        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search by supplier name or invoice number...">
            <button onclick="searchPurchases()">Search</button>
            <a href="/admin/dashboard"><button>Back</button></a>
        </div>

        <section class="transactions mt-4 table-responsive">
            <table class="table table-bordered" id="purchases-table">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Invoice No.</th>
                        <th>Party Name</th>
                        <th>Transaction Type</th>
                        <th>Payment Type</th>
                        <th>Amount</th>
                        <th>Balance Due</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach(item=> { %>

                        <tr>
                            <td class="purchase-date">
                                <%= new Date(item.date).toLocaleDateString() %>
                            </td>

                            <td>
                                <%= item.invoice_number %>
                            </td>
                            <td>
                                <%= item.customer_name %>
                            </td>
                            <td>
                                <%= item.transaction_type %>
                            </td>
                            <td>
                                <%= item.payment_type %>
                            </td>
                            <td>SAR <%= item.total_amount %>
                            </td>
                            <td> SAR <%= item.balance_due %>
                            </td>
                            <td class="d-flex">
                                <a href="/admin/transactionEdit?id=<%=item.id%>" class="btn btn-success btn-sm"><i
                                        class="fas fa-edit"></i></a>
                                        <a href="#" class="btn btn-danger btn-sm" onclick="deleteFuntion('<%=item.id%>')"><i
                                            class="fas fa-trash"></i></a>
                                <a href="/admin/transactionDetails?id=<%=item.id%>" class="btn btn-warning btn-sm"><i
                                        class="fa-regular fa-eye"></i></a>
                            </td>
                        </tr>
                        </a>
                        <% }) %>
                </tbody>
            </table>
        </section>
    </div>

    <script>
        function searchPurchases() {
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            const rows = document.querySelectorAll('table tbody tr');

            rows.forEach(row => {
                const invoiceNumber = row.cells[0].innerText.toLowerCase();
                const supplierName = row.cells[1].innerText.toLowerCase();

                if (invoiceNumber.includes(searchInput) || supplierName.includes(searchInput)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>
    <script src='https://cdn.jsdelivr.net/npm/sweetalert2@11'></script>

<script>
    function deleteFuntion(itemId) {
        Swal.fire({
            title: "Do you really want to delete?",
            showDenyButton: false,
            showCancelButton: true,
            confirmButtonText: "Save",
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire("Saved!", "", "success");
                fetch(`/admin/transactionDelete?id=${itemId}`)
                    .then(() => {
                        setTimeout(() => {
                            window.location.reload(); // Reload the page after deletion
                        }, 200);
                    })
                    .catch((error) => {
                        console.error("Error while deleting:", error);
                    });
            } else if (result.isDenied) {
                Swal.fire("Changes are not saved", "", "info");
            }
        });
    }
    </script>

</body>
</html>
