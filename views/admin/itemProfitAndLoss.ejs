<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Profit & Loss</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
         body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        padding: 0;
    }

    table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        table th, table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        table th {
            background-color: #007bff;
            color: white;
        }
        table tr:hover {
            background-color: #f5f5f5;
        }
        .search-bar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .search-bar input {
            width: 60%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        .search-bar button {
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .search-bar button:hover {
            background-color: #218838;
        }
        .responsive-table {
            overflow-x: auto;
            margin-top: 20px;
        }
        @media (max-width: 768px) {
            table {
                font-size: 12px;
            }
            .search-bar {
                flex-direction: column;
                align-items: center;
            }
            .search-bar input, .search-bar button {
                width: 100%;
                margin-bottom: 10px;
            }
        }
    header {
        background-color: #3498db;
        color: #fff;
        padding: 20px 0;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
    }

    .navbar h1 {
        font-size: 24px;
        margin: 0;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }

    nav ul li {
        margin-left: 20px;
    }

    nav ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 16px;
        padding: 10px 15px;
        border-radius: 5px;
    }

    nav ul li a:hover {
        background-color: #2980b9;
    }

    main {
        padding: 40px 20px;
    }

    h2 {
        font-size: 24px;
        color: #333;
    }

    section {
        margin-bottom: 30px;
    }

    .stat-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .stat-card {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .stat-card h3 {
        margin: 0;
        color: #3498db;
    }

    .stat-card p {
        font-size: 20px;
        color: #333;
    }

    .quick-links ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .quick-links ul li {
        margin: 10px 0;
    }

    .quick-links ul li a {
        color: #3498db;
        text-decoration: none;
        font-size: 18px;
    }

    .quick-links ul li a:hover {
        text-decoration: underline;
    }

    .report-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .report-card {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .report-card a {
        display: block;
        margin-top: 10px;
        color: #3498db;
        text-decoration: none;
        font-size: 16px;
    }

    .report-card a:hover {
        text-decoration: underline;
    }

    .user-management p {
        font-size: 18px;
        margin-top: 10px;
    }

    footer {
        background-color: #2c3e50;
        color: #fff;
        text-align: center;
        padding: 20px;
        position: fixed;
        width: 100%;
        bottom: 0;
    }

    /* Responsive Styles */
    header {
        background-color: #3498db;
        color: #fff;
        padding: 15px 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 10px;
    }

    .navbar h1 {
        font-size: 20px;
        margin: 0;
        color: white;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }

    nav ul li {
        margin-left: 10px;
    }

    nav ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 14px;
        padding: 8px 12px;
        border-radius: 5px;
    }

    nav ul li a:hover {
        background-color: #2980b9;
    }

    .hamburger {
        display: none;
        font-size: 24px;
        cursor: pointer;
        color: white;
        background: none;
        border: none;
    }
    .row a{
            text-decoration: none;
        }

    /* Responsive Styles */
    @media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: flex-start;
        }

        nav ul {
            flex-direction: column;
            display: none;
            width: 100%;
            background-color: #3498db;
            padding: 10px 0;
            margin-top: 10px;
        }

        nav ul li {
            margin: 0;
            text-align: center;
        }

        nav ul li a {
            display: block;
            padding: 10px;
        }

        nav ul.show {
            display: flex;
        }

        .hamburger {
            display: block;
        }

        table {
            font-size: 12px;
        }

        h1 {
            font-size: 20px;
        }

        button {
            padding: 8px 15px;
            font-size: 14px;
        }

        .table-responsive {
            margin-top: 10px;
        }
    }
    </style>
</head>
<body>
    <%- include('./navbar')  %>

    <main>
        <!-- Search Bar -->
        <div class="search-bar">
            <input
                type="text"
                id="searchInput"
                placeholder="Search by Item Name..."
            />
            <button class="mt-3" onclick="searchTable()">Search</button>
            <button class="mt-3" onclick="reset()">Reset</button>
            <button type="button" class="btn btn-warning mt-3" onclick="downloadPdf()">Download Report</button>
        </div>

        <!-- Table -->
        <div class="responsive-table" id="reportContainer">
            <table id="profitLossTable">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Total Sales (SAR)</th>
                        <th>Total Purchases (SAR)</th>
                        <th>Profit (SAR)</th>
                        <th>Loss (SAR)</th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach(item => { %>
                        <tr>
                            <td><%= item.item_name %></td>
                            <td><%= item.total_sales %></td>
                            <td><%= item.total_purchases %></td>
                            <td><%= item.profit %></td>
                            <td><%= item.loss %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </main>
    
</body>
<script>
    // Function to search table
    function searchTable() {
        const input = document.getElementById("searchInput").value.toLowerCase();
        const table = document.getElementById("profitLossTable");
        const rows = table.getElementsByTagName("tr");

        // Loop through table rows and filter
        for (let i = 1; i < rows.length; i++) {
            const itemNameCell = rows[i].getElementsByTagName("td")[0]; // First cell (Item Name)
            if (itemNameCell) {
                const itemName = itemNameCell.textContent || itemNameCell.innerText;
                rows[i].style.display = itemName.toLowerCase().includes(input)
                    ? ""
                    : "none";
            }
        }
    }
    function reset(){
        window.location.reload()
    }
    function downloadPdf() {
    
    const wrapper = document.createElement('div');


    const companyName = document.createElement('h2');
    companyName.textContent = 'Injaz';
    companyName.style.textAlign = 'center'; // Optional styling
    wrapper.appendChild(companyName);


    const reportHeading = document.createElement('h4');
    reportHeading.textContent = 'Item Wise Profit&Loss Report';
    reportHeading.style.textAlign = 'center'; // Optional styling
    wrapper.appendChild(reportHeading);

    const tableContent = document.getElementById('reportContainer').cloneNode(true); // Clone the table element
    wrapper.appendChild(tableContent);

    html2pdf().from(wrapper).save();
}
</script>
<script>
    const hamburger = document.querySelector('.hamburger');
    const navMenu = document.querySelector('nav ul');

    hamburger.addEventListener('click', () => {
        navMenu.classList.toggle('show');
    });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>
</html>