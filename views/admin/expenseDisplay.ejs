<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expenses by Category</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            padding-left: 20px;
            padding-top: 20px;
        }
        @media (max-width: 768px) {
            .navbar-toggler {
                border: none;
                outline: none;
                z-index: 100;
            }
            .main-content {
                width: 100%;
            }
            .navbar-toggler-icon {
                background-color: rgb(223, 223, 223);
            }
        }
    </style>
</head>

<body>
    <%- include('./navbar')  %>
        <div class="container">
            
            <a href="/admin/addExpense" class="btn btn-primary mt-3"> Add Expense </a>
            <h2 class="text-center mb-4">Expenses by Category</h2>
            <div class="accordion" id="expensesAccordion">
                <% categories.forEach(category=> { %>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading-<%= category.id %>">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapse-<%= category.id %>" aria-expanded="false"
                                aria-controls="collapse-<%= category.id %>">
                                <%= category.category_name %>
                            </button>
                        </h2>
                        <div id="collapse-<%= category.id %>" class="accordion-collapse collapse"
                            aria-labelledby="heading-<%= category.id %>" data-bs-parent="#expensesAccordion">
                            <div class="accordion-body">
                                <% if (category.expenses.length> 0) { %>
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Expense Number</th>
                                                <th>Date</th>
                                                <th>Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% category.expenses.forEach((expense, index)=> { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= expense.expense_number %>
                                                    </td>
                                                    <td>
                                                        <%= expense.date.toISOString().split('T')[0] %>
                                                    </td>
                                                    <td>$<%= expense.amount %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                    <% } else { %>
                                        <p class="text-muted">No expenses available for this category.</p>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>


    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
        
</body>

</html>