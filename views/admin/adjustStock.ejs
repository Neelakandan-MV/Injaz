<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adjust Stock</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h3>Adjust Stock</h3>
                    </div>
                    <div class="card-body">
                        <form action="/admin/adjustStock" method="POST">
                            <!-- Category -->
                             
                            <div class="mb-3 d-flex justify-content-center">
                                <label>
                                    <input type="radio" name="adjustmentType" value="add"> Add Stock
                                </label><br>
                                <label class="ms-4">
                                    <input type="radio" name="adjustmentType" value="reduce"> Reduce Stock
                                </label><br>
                            </div>
                            <!-- Date -->
                            <div class="mb-3">
                                <label for="date" class="form-label">Date</label>
                                <input type="date" name="date" id="date" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="expenseNumber" class="form-label">Enter Quantity</label>
                                <input type="number" name="quantity" id="quantity" class="form-control"
                                    placeholder="Enter Quantity" required>
                            </div>
                            <!-- Amount -->
                            <div class="mb-3">
                                <label for="amount" class="form-label">Price</label>
                                <input type="number" step="0.01" name="price" id="price" class="form-control"
                                    placeholder="Enter Price" required>
                            </div>
                            <div class="mb-3">
                                <label for="amount" class="form-label">Adjustment Details</label>
                                <input type="text" step="0.01" name="details" id="details" class="form-control"
                                    placeholder="Adjustment Details" required>
                            </div>
                            <input type="hidden" value="<%= item_id %>" name="item_id">
                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Add Expense</button>
                                <a class="btn btn-danger mt-3" href="/admin/viewStockReport">Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>