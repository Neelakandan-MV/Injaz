<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stock Report</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
           body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        padding: 0;
    }
    .table-responsive{
        margin: 20px;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
    }

    th, td {
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    header {
        background-color: #3498db;
        color: #fff;
        padding: 15px 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 10px;
    }

    .navbar h1 {
        font-size: 20px;
        margin: 0;
        color: white;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }

    nav ul li {
        margin-left: 10px;
    }

    nav ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 14px;
        padding: 8px 12px;
        border-radius: 5px;
    }

    nav ul li a:hover {
        background-color: #2980b9;
    }

    .hamburger {
        display: none;
        font-size: 24px;
        cursor: pointer;
        color: white;
        background: none;
        border: none;
    }
    .row a{
            text-decoration: none;
        }

    /* Responsive Styles */
    @media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: flex-start;
        }

        nav ul {
            flex-direction: column;
            display: none;
            width: 100%;
            background-color: #3498db;
            padding: 10px 0;
            margin-top: 10px;
        }

        nav ul li {
            margin: 0;
            text-align: center;
        }

        nav ul li a {
            display: block;
            padding: 10px;
        }

        nav ul.show {
            display: flex;
        }

        .hamburger {
            display: block;
        }

        table {
            font-size: 12px;
        }

        h1 {
            font-size: 20px;
        }

        button {
            padding: 8px 15px;
            font-size: 14px;
        }

        .table-responsive {
            margin-top: 10px;
            margin: 20px;
        }

    }
    .right-section {
            flex: 2;
            display: flex;
            flex-direction: column;
            gap: 20px;
            width: 100%;
        }
</style>

    </style>
</head>
<body>

    <%- include('./navbar')  %>

    

    <div class="table-responsive">
        
        <div class="right-section">
            <!-- Party info card -->
            <div class="party-info-card">
                <p><strong>Item :</strong> <span id="partyPhone"><%= item.item_name %></span></p>
                <p><strong>Sale Price :</strong> <span id="partyPhone"><%= item.sale_price %></span></p>
                <p><strong>Purchase Price :</strong> <span id="partyEmail"><%= item.purchase_price %></span></p>
                <p><strong>Stock :</strong> <span id="partyAddress"><%= item.stock %></span></p>
                <table border="1" id="reportContainer">
                    <thead>
                        <tr>
                            <th>Transaction</th>
                            <th>Stock Quantity</th>
                            <th>Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% stock_adjustments.forEach(item => { %>
                            <tr>
                                <td><%= item.adjustment_type %></td>
                                <td><%= item.adjustment_quantity %></td>
                                <td><%= item.total_amount %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
</div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script>
    const hamburger = document.querySelector('.hamburger');
    const navMenu = document.querySelector('nav ul');

    hamburger.addEventListener('click', () => {
        navMenu.classList.toggle('show');
    });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>
</html>
