<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Report</title>
    <!-- CSS Framework -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
            padding: 20px;
        }
        .main-content {
            max-width: 1200px;
            margin: 0 auto;
        }
        .hamburger {
            cursor: pointer;
            font-size: 1.5rem;
            color: #333;
        }
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        @media (max-width: 768px) {
            
            .table-responsive {
                overflow-x: auto; 
            }
        }

        .btn-primary,
        .btn-secondary {
            margin-right: 10px; 
        }
    </style>
</head>
<body>
   
    <%- include('./aside.ejs') %>
    <!-- Main Content -->
    <div class="main-content">
        <!-- Header Section -->
        <header class="mb-4 d-flex justify-content-between align-items-center">
            <h1 class="fw-bold">Item Report</h1>
            <i class="fas fa-bars hamburger" id="hamburger"></i>
        </header>


    <div class="container mt-4">
        <form id="filter-form" class="mb-4">
            <div class="input-group">
                <input type="text" name="itemId" class="form-control" placeholder="Enter Item Name" />
                <button type="submit" class="btn btn-primary">Get Report</button>
            </div>
            <button type="button" class="btn btn-warning mt-3" onclick="downloadPdf()">Download Report</button>
        </form>

        <!-- Bootstrap table with responsiveness -->
        <div class="table-responsive" id="reportContainer">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Sale Quantity</th>
                        <th>Purchase Quantity</th>
                        <th>Adjustment Quantity</th>
                        <th>Closing Quantity</th>
                    </tr>
                </thead>
                <tbody id="report-data">
                    <% itemDetails.map(item=> { %>
                        <tr>
                            <td>
                                <%= item.item_name %>
                            </td>
                            <td>
                                <%= item.sale_qty %>
                            </td>
                            <td>
                                <%= item.purchase_qty %>
                            </td>
                            <td>
                                <%= item.adjust_qty %>
                            </td>
                            <td>
                                <%= item.closing_qty %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        
    </div>
</div>

<!-- Include Bootstrap JS for optional features like tooltips, modals, etc. -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

       <script>
        function downloadPdf() {

            const wrapper = document.createElement('div');


            const companyName = document.createElement('h2');
            companyName.textContent = 'Injaz';
            companyName.style.textAlign = 'center'; // Optional styling
            wrapper.appendChild(companyName);


            const reportHeading = document.createElement('h4');
            reportHeading.textContent = 'Item Detail Report';
            reportHeading.style.textAlign = 'center'; // Optional styling
            wrapper.appendChild(reportHeading);

            const tableContent = document.getElementById('reportContainer').cloneNode(true); // Clone the table element
            wrapper.appendChild(tableContent);

            html2pdf().from(wrapper).save();
        }
    </script>
    <script>
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');
        const hamburger = document.getElementById('hamburger');
    
        hamburger.addEventListener('click', () => {
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
        });
    
        overlay.addEventListener('click', () => {
            sidebar.classList.remove('active');
            overlay.classList.remove('active');
        });
    </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>


</body>

</html>