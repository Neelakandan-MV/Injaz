<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cash Flow</title>
    <!-- CSS Framework -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
            padding: 20px;
        }
        .main-content {
            max-width: 1200px;
            margin: 0 auto;
        }
        .hamburger {
            cursor: pointer;
            font-size: 1.5rem;
            color: #333;
        }
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        @media (max-width: 768px) {
            
            .table-responsive {
                overflow-x: auto; 
            }
        }

        .btn-primary,
        .btn-secondary {
            margin-right: 10px; 
        }
    </style>
</head>
<body>
   
    <%- include('./aside.ejs') %>
    <!-- Main Content -->
    <div class="main-content">
        <!-- Header Section -->
        <header class="mb-4 d-flex justify-content-between align-items-center">
            <h1 class="fw-bold">Cash Flow</h1>
            <i class="fas fa-bars hamburger" id="hamburger"></i>
        </header>
            <!-- Header -->
            <header>
                <div class="d-flex justify-content-between align-items-center">
                    <a href="/business-owner/addTransactions" class="btn btn-primary">+ Add Cash Flow</a>
                    <button type="button" class="btn btn-warning mt" onclick="downloadPdf()">Download Report</button>
                </div>
            </header>

            <!-- Cash Flow Section -->
            <section class="transactions mt-4 table-responsive" id="reportContainer">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            
                            <th>Name</th>
                            <th>Transaction Type</th>
                            <th>Money Type</th>
                            <th>Amount</th>
                            <!-- <th>Actions</th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <% cashFlows.forEach(cashFlow=> { %>
                            <tr>
                                <td>
                                    <%= new Date(cashFlow.date).toLocaleDateString() %>
                                </td>
                                
                                <td>
                                    <%= cashFlow.name %>
                                </td>
                                <td>
                                    <%= cashFlow.tnx_type %>
                                </td>
                                <td>
                                    <%= cashFlow.money_type %>
                                </td>
                                <td>SAR <%= cashFlow.amount %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </section>
            
        </div>
    </div>
</body>
<script>
function downloadPdf() {
    
    const wrapper = document.createElement('div');


    const companyName = document.createElement('h2');
    companyName.textContent = 'Injaz';
    companyName.style.textAlign = 'center'; // Optional styling
    wrapper.appendChild(companyName);


    const reportHeading = document.createElement('h4');
    reportHeading.textContent = 'Cash Flow Report';
    reportHeading.style.textAlign = 'center'; // Optional styling
    wrapper.appendChild(reportHeading);

    const tableContent = document.getElementById('reportContainer').cloneNode(true); // Clone the table element
    wrapper.appendChild(tableContent);

    html2pdf().set({filename:'Cash Flow Report'}).from(wrapper).save();
}
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>
<script>
    const sidebar = document.getElementById('sidebar');
    const overlay = document.getElementById('overlay');
    const hamburger = document.getElementById('hamburger');

    hamburger.addEventListener('click', () => {
        sidebar.classList.toggle('active');
        overlay.classList.toggle('active');
    });

    overlay.addEventListener('click', () => {
        sidebar.classList.remove('active');
        overlay.classList.remove('active');
    });
</script>

</html>