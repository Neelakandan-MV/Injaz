<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cash Flow</title>
    <!-- CSS Framework -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
            padding: 20px;
        }
        .main-content {
            max-width: 1200px;
            margin: 0 auto;
        }
        .hamburger {
            cursor: pointer;
            font-size: 1.5rem;
            color: #333;
        }
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .tabs {
      display: flex;
      justify-content: space-around;
      border-bottom: 2px solid #ccc;
    }

    .tab {
      flex: 1;
      text-align: center;
      padding: 10px;
      cursor: pointer;
    }

    .tab.active {
      color: white;
      background-color: #007bff;
    }

    .content {
      padding: 20px;
    }

    .money-in, .money-out {
      display: none;
    }

    .money-in.active, .money-out.active {
      display: block;
    }
        @media (max-width: 768px) {
            
            .table-responsive {
                overflow-x: auto; 
            }
        }

        .btn-primary,
        .btn-secondary {
            margin-right: 10px; 
        }

        .date-filter {
        margin: 10px 0;
        display: flex;
        gap: 10px;
        align-items: center;
    }
    </style>
</head>

<% 
    function formatDateToDDMMYYYY(mysqlDate) {
    const date = new Date(mysqlDate); // Parse the MySQL date
    const day = String(date.getDate()).padStart(2, '0'); // Ensure two digits
    const month = String(date.getMonth() + 1).padStart(2, '0'); // Months are 0-based
    const year = date.getFullYear();
    return `${day}-${month}-${year}`;
}
%>
<body>
   
    <%- include('./aside.ejs') %>
<div class="main-content">

    <header class="mb-4 d-flex justify-content-between align-items-center">
        <h1 class="fw-bold">Cash Flow</h1>
        <i class="fas fa-bars hamburger" id="hamburger"></i>
    </header>
        <section class="cashflow-summary mb-4 mt-3">
            <div class="row">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-header">Opening Cash</div>
                        <div class="card-body">
                            <h5 class="card-title" id="openingCash">SAR <%= cashFlows.length > 0 ? cashFlows[0].opening_cash.toFixed(5) : '0.00' %></h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mt-2">
                    <div class="card text-center">
                        <div class="card-header">Closing Cash</div>
                        <div class="card-body">
                            <h5 class="card-title" id="closingCash">SAR <%= closingCash.toFixed(5) %></h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mt-2">
                    <div class="card text-center">
                        <div class="card-header">Money In</div>
                        <div class="card-body">
                            <h5 class="card-title" id="moneyIn" style="color: green;">SAR <%= moneyIn %></h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mt-2">
                    <div class="card text-center">
                        <div class="card-header">Money Out</div>
                        <div class="card-body">
                            <h5 class="card-title" id="moneyOut" style="color: red;">SAR <%= moneyOut %></h5>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        

        <div class="tabs">
            <div class="tab active" onclick="switchTab('money-in')">Money In</div>
            <div class="tab" onclick="switchTab('money-out')">Money Out</div>
        </div>
        
        <!-- Date Filter Inputs -->
        <div class="date-filter">
            <label for="startDate">Start Date:</label>
            <input type="date" id="startDate" onchange="filterTransactions()">
            
            <label for="endDate">End Date:</label>
            <input type="date" id="endDate" onchange="filterTransactions()">
        </div>
        
        <div class="content">
            <div class="money-in active">
                <a href="#" class="btn btn-warning mt" onclick="moneyInDownload()">Download Report</a>
        
                <section class="transactions mt-4 table-responsive" id="moneyIn">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Name</th>
                                <th>Transaction Type</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody id="moneyInBody">
                            <% cashFlows.forEach(cashFlow => { %>
                                <% if(cashFlow.money_type == 'money_in'){ %>
                                <tr>
                                    <td><%= formatDateToDDMMYYYY(cashFlow.date) %></td>
                                    <td><%= cashFlow.name %></td>
                                    <td><%= cashFlow.tnx_type %></td>
                                    <td style="color: green;">SAR <%= cashFlow.amount %></td>
                                </tr>
                            <% }}) %>
                        </tbody>
                    </table>
                </section>
            </div>
        
            <div class="money-out">
                <a href="#" class="btn btn-warning mt" onclick="moneyOutDownload()">Download Report</a>
                <section class="transactions mt-4 table-responsive" id="moneyOut">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Name</th>
                                <th>Transaction Type</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody id="moneyOutBody">
                            <% cashFlows.forEach(cashFlow => { %>
                                <% if(cashFlow.money_type == 'money_out'){ %>
                                <tr>
                                    <td><%= formatDateToDDMMYYYY(cashFlow.date) %></td>
                                    <td><%= cashFlow.name %></td>
                                    <td><%= cashFlow.tnx_type %></td>
                                    <td style="color: red;">SAR <%= cashFlow.amount %></td>
                                </tr>
                            <% }}) %>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
        
        <script>
            function switchTab(tab) {
                document.querySelector('.tab.active').classList.remove('active');
                document.querySelector('.content > div.active').classList.remove('active');
        
                if (tab === 'money-in') {
                    document.querySelector('.tab:nth-child(1)').classList.add('active');
                } else if (tab === 'money-out') {
                    document.querySelector('.tab:nth-child(2)').classList.add('active');
                }
        
                document.querySelector(`.${tab}`).classList.add('active');
            }
        
            function filterTransactions() {
    let startDate = document.getElementById("startDate").value;
    let endDate = document.getElementById("endDate").value;

    if (!startDate || !endDate) return; // Skip filtering if no date is selected

    startDate = new Date(startDate);
    endDate = new Date(endDate);

    let filteredMoneyIn = 0;
    let filteredMoneyOut = 0;
    let filteredCashFlows = [];

    document.querySelectorAll("#moneyInBody tr, #moneyOutBody tr").forEach(row => {
        let dateText = row.cells[0].innerText.trim(); // Get the date from the first cell (DD-MM-YYYY)
        
        // Convert "DD-MM-YYYY" to a Date object
        let [day, month, year] = dateText.split('-').map(num => parseInt(num, 10));
        let rowDate = new Date(year, month - 1, day);

        if (rowDate >= startDate && rowDate <= endDate) {
            row.style.display = "";
            filteredCashFlows.push({
                date: rowDate,
                amount: parseFloat(row.cells[3].innerText.replace("SAR", "").trim()),
                type: row.cells[3].style.color === "green" ? "money_in" : "money_out"
            });

            if (row.cells[3].style.color === "green") {
                filteredMoneyIn += parseFloat(row.cells[3].innerText.replace("SAR", "").trim());
            } else {
                filteredMoneyOut += parseFloat(row.cells[3].innerText.replace("SAR", "").trim());
            }
        } else {
            row.style.display = "none";
        }
    });

    // Update Summary
    updateCashFlowSummary(filteredCashFlows, filteredMoneyIn, filteredMoneyOut);
}

function updateCashFlowSummary(filteredCashFlows, moneyIn, moneyOut) {
    let openingCash = filteredCashFlows.length > 0 ? filteredCashFlows[0].amount : 0;
    let closingCash = openingCash + moneyIn - moneyOut;

    document.getElementById("openingCash").innerText = `SAR ${openingCash.toFixed(5) || 0}`;
    document.getElementById("closingCash").innerText = `SAR ${closingCash.toFixed(5) || 0}`;
    document.getElementById("moneyIn").innerText = `SAR ${moneyIn.toFixed(5) || 0}`;
    document.getElementById("moneyOut").innerText = `SAR ${moneyOut.toFixed(5) || 0}`;
}

        </script>
        
        <style>
            .date-filter {
                margin: 10px 0;
                display: flex;
                gap: 10px;
                align-items: center;
            }
        </style>
        
        
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>
<script>
    const sidebar = document.getElementById('sidebar');
    const overlay = document.getElementById('overlay');
    const hamburger = document.getElementById('hamburger');

    hamburger.addEventListener('click', () => {
        sidebar.classList.toggle('active');
        overlay.classList.toggle('active');
    });

    overlay.addEventListener('click', () => {
        sidebar.classList.remove('active');
        overlay.classList.remove('active');
    });
</script>
<script>
    function moneyInDownload() {

const wrapper = document.createElement('div');


const companyName = document.createElement('h2');
companyName.textContent = 'Injaz';
companyName.style.textAlign = 'center';
wrapper.appendChild(companyName);


const reportHeading = document.createElement('h4');
reportHeading.textContent = 'Cash Flow Report';
reportHeading.style.textAlign = 'center';
wrapper.appendChild(reportHeading);

const tableContent = document.getElementById('moneyIn').cloneNode(true);
wrapper.appendChild(tableContent);

html2pdf().set({ filename: 'Cash Flow Report' }).from(wrapper).save();
}
    function moneyOutDownload() {

const wrapper = document.createElement('div');


const companyName = document.createElement('h2');
companyName.textContent = 'Injaz';
companyName.style.textAlign = 'center';
wrapper.appendChild(companyName);


const reportHeading = document.createElement('h4');
reportHeading.textContent = 'Cash Flow Report';
reportHeading.style.textAlign = 'center';
wrapper.appendChild(reportHeading);

const tableContent = document.getElementById('moneyOut').cloneNode(true);
wrapper.appendChild(tableContent);

html2pdf().set({ filename: 'Cash Flow Report' }).from(wrapper).save();
}
</script>

</html>